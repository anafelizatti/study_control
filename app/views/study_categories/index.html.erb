<p id="notice"><%= notice %></p>

<h1>Categorias de estudo</h1>

<table>
  <thead>
    <tr>
      <th>CATEGORIA</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_categories.each do |study_category| %>
      <tr>
        <td><%= study_category.title %></td>
        <td><%= link_to 'MOSTRAR', study_category %></td>
        <td><%= link_to 'EDITAR', edit_study_category_path(study_category) %></td>
        <td><%= link_to 'DELETAR', study_category, method: :delete, data: { confirm: 'Você está certo disso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

